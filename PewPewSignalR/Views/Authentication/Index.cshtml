
@{
    ViewData["Title"] = "Index";
}
@model PewPewSignalR.Models.User

<h1>Index</h1>
<div class="form-group">

<form method="post" asp-controller="Authentication" asp-action="Index">
    <label asp-for="Username" class=""></label>
    <input asp-for="Username" class="form-control" />
    <span asp-validation-for="Username" class=""></span>
    <br />
    <input type="submit" value="Submit" class="btn btn-primary"/>
</form>
</div>
<div class="container">
    <h5 class="mt-3" style="display: block;">Chat Instructions</h5>
    <ul>
        <li>By default all messages will be sent to a public group</li>
        <li>"Ctrl + c" to silence group messages</li>
        <li>"Ctrl + x" to silence all but current private channel</li>
        <li>"<username>/" to start a new private channel</li>
    </ul>
</div>
